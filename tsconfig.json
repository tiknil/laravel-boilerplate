{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "es2015",
    "allowJs": true,
    "noImplicitAny": false,
    "strict": true,
    "strictPropertyInitialization": false,
    "sourceMap": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [
      "dom",
      "scripthost",
      "es2015",
      "es2015.promise"
    ]
  },
  "include": [
    "resources/js/**/*"
  ]
}
